{% extends 'base.html.twig' %}

{% block title %}Mis Rutas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/estilo/misRutas.css') }}">
{% endblock %}

{% block body %}

    <article class = "video-sec-wrap">
		<div class = "video-sec">
			<div id = "tituloPrin">
				<h1 class = "video-sec-title">Mis Rutas</h1>					
			</div>
			<ul class = "video-sec-middle" id="vid-grid">
				{% for ruta in rutas %}
					<li class = "thumb-wrap">
						<a href="/misTours/id={{ruta.id}}">
							<img class = "thumb" src = "/images/ruta/{{ruta.urlFoto}}" alt = "{{ruta.urlFoto}}" width = "341" height="260">
							<div class = "thumb-info text-primary text-uppercase" style="letter-spacing: 2px;">
								<p class = "thumb-title">{{ruta.titulo}}</p>
							</div>
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</article>
{% endblock %}
